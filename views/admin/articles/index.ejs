<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
    <div class="container">
      <h2>Artigos </h2>
      <hr>
      <a class="btn btn-dark" href="/admin/articles/new">Criar novo artigo</a> <br>
      <br>
      <table class="table table-bordered">
          <thead>
              <tr>
                  <th>ID</th>
                  <th>Título</th>
                  <th>Slug</th>
                  <th>Categoria</th>
                  <th>Ações</th>
              </tr>
          </thead>
          <tbody>
          <% articles.forEach(articles =>{ %>
            <tr>
                  <td><%= articles.id %></td>
                  <td><%= articles.title %></td>
                  <td><%= articles.slug %></td>
                  <td><%= articles.category.title %></td>
                  <td>
                    <a class="btn btn-warning">Editar</a>
                      <form method="POST" action="/articles/delete" style="display : inline" onsubmit="confirmDelete(event, this)">
                          <input type="hidden" name='id' value="<%= articles.id %> ">
                          <button class="btn btn-danger">Deletar</button>
                      </form>
                  </td>
            <tr>
            <% }) %>
          </tbody>
      </table>
   </div>
<%- include('../../partials/footer.ejs') %>
<script>
    function confirmDelete(event, form){
        event.preventDefault()
     var modalDecision= confirm('Deseja deletar ?')
     if(modalDecision){
        form.submit()
     }
    }
</script>