<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
    <div class="container">
        <br>
        <div class="card" >
            <div class="card-header" >
                <h2>Novo artigo</h2>
                <hr>
            </div>
            <div class="card-body" >
                <form method="POST" action="/articles/save">
                    <input class="form-control" type='text' name="title" placeholder="Defina o titulo do artigo"><br>
                    <textarea class="form-control" placeholder="Escreva seu artigo" id='article' name="body"></textarea><br>
                    <label>Categorias</label>
                    <select class="form-control" name="category">
                        <% categories.forEach(categories =>{ %>
                            <option value=" <%= categories.id %> "> <%= categories.title %>  </option>
                        <% }) %>
                    </select><br>
                    <button class="btn btn-dark"> Cadastrar</button>
                </form>
             </div>
        </div>
   </div>
<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#article',
        plugins:[
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>